<% if user_signed_in? %>
	<div class="box">
	  <h5>Target: </h5><%= antibody.target %>
	  <p class="details">
	  	<h5>Vendor: </h5><%= antibody.vendor %>
	    	<br />
	  	<h5>Description: </h5><%= antibody.description %>
	   		<br />
	   	<h5>Approval Rating: <%= antibody.reputation_for(:votes).to_i %></h5>
		 	<h5>Protocols: <%= antibody.protocols.count %></h5>
	   </p>
	   <%= link_to 'Show', antibody %>
	</div>
<% else %>
	<div class="box">
	  <h5>Target: </h5><%= antibody.target %>
	  <p class="details">
	  	<h5>Vendor: </h5><%= antibody.vendor %>
	    	<br />
	  	<h5>Product: </h5><%= antibody.product %>
	    	<br />
	  	<h5>Description: </h5><%= antibody.description %>
	   		<br />
	   	<h5>Approval Rating: <%= antibody.reputation_for(:votes).to_i %></h5>
	   	<h5>Protocols: <%= antibody.protocols.count %></h5>
	  </p>
	</div>
<% end %>