<div class="row">
	<div class="span6 offset3">
		<div class="well">
			<p>
			  <b>Target:</b>
			  <%= @antibody.target %>
			</p>

			<p>
			  <b>Vendor:</b>
			  <%= @antibody.vendor %>
			</p>

			<p>
			  <b>Product:</b>
			  <%= @antibody.product %>
			</p>

			<p>
			  <b>Description:</b>
			  <%= @antibody.description %>
			</p>
			<p>
				<%= link_to "Add Protocol",  new_protocol_path, class: "btn btn-success" %>
				<%= link_to 'Edit Antibody', edit_antibody_path(@antibody), class: "btn btn-primary" %>
				<%= link_to 'Destroy Antibody', @antibody, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
			</p>

			<br />
						
			<p>
				<%= pluralize @antibody.reputation_for(:votes).to_i, "rating" %> |
					<%= link_to "Approve", vote_antibody_path(@antibody, type: "up"), method: "post" %> | 
					<%= link_to "Disapprove", vote_antibody_path(@antibody, type: "down"), method: "post" %>
			</p>
		</div>
	
		<%= link_to 'Back', antibodies_path %>

	</div>
</div>