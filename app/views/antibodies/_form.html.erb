<%= simple_form_for(@antibody, html: { class: "form-horizontal"}) do |f| %>

  <%= f.input :target, :placeholder => "Target name" %>
  <%= f.input :vendor, :placeholder => "Vendor name" %>
  <%= f.input :product, :placeholder => "Product ID" %>
  <%= f.input :description, as: :text, input_html: { rows: "3"}, :placeholder => "Summary" %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
