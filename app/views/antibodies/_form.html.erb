<%= simple_form_for(@antibody, html: { class: "form-horizontal"}) do |f| %>

  <%= f.input :target, 	 :placeholder => "Target" %>
  <%= f.input :antibody, :placeholder => "Antibody" %>
  <%= f.input :vendor, 	 :placeholder => "Vendor" %>
  <%= f.input :product,  :placeholder => "Product ID" %>
  <%= f.input :isotype,  :placeholder => "Isotype" %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
