<% if user_signed_in? %>
	<%= render 'users/show' %>
<% else %>
	<div class="hero-unit">
		<div class="text-center">
			<div class="page-header">
				<h1>Sciero.	
				<p>
					<small>Scientific Research. Redefined.</small>
				</p>
				</h1>
			</div>
		</div>
		<div class="row-fluid">
      <div class="span4 offset4">
        <div class="span12">
          <div class="span6">
            <a data-toggle="modal" href="#Register" class="btn btn-large btn-block btn-success">Register</a>
          </div>
          <div class="modal fade" id="Register" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h2 class="modal-title">Registration</h2>
                </div>
                <div class="modal-body">
                  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
                  <%= f.error_notification %>
                  <%= f.input :name, :autofocus => true %>
                  <%= f.input :email %>
                  <%= f.input :password %>
                  <%= f.input :password_confirmation %>
                </div>
                <div class="modal-footer">
                  <%= f.submit "Register", class: "btn btn-primary" %>
                </div>
                <% end %>
              </div>
            </div>
          </div>
          <div class="span6">
            <%= link_to "Antibodies", antibodies_path, class: "btn btn-large btn-block btn-info" %>
          </div>
        </div>
      </div>
    </div> 
	</div>
	<%= render 'pages/welcome' %>
<% end %>
