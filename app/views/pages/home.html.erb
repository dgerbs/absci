	<div class="hero-unit">
		<h2 class="row-fluid text-center">You're now logged in.</h2>
		</br>
		</br>
		<div class="row-fluid">
			<div class="span4 offset4">
				<div class="span12">
						<%= link_to "Search Antibody Binder", '#', class: "btn btn-large btn-block btn-info" %>
