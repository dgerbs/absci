<% if user_signed_in? %>
	<div class="container-fluid">
	  <div class="row-fluid">
	    <div class="span3">
	    	<div class="well">
	      	<p>
	      		Welcome, <%= current_user.name %>
	      		<br />
	      		<br />
	      		<i class="icon-user"></i>
	      		<br />
	          <br />
	      		<em>Insert image and options here.</em>
	      	</p>
	    	</div>
	      <div class="nav">
	        <%= link_to "Add Antibody", new_antibody_path, class: "btn btn-success" %>
	        <%= link_to "Search Antibodies", antibodies_path, class: "btn btn-info" %>
	      </div>
	    </div>
	    <div class="span9">
	    	<div class="well">
	        <div class="accordion" id="accordion2">
	          <div class="accordion-group">
	            <div class="accordion-heading">
	              <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
	               <i class="icon-file"></i> My Protocols (<%= current_user.protocols.count %>)
	              </a>
	            </div>
	            <div id="collapseOne" class="accordion-body collapse">
	              <div class="accordion-inner">
	                <p>
	                	<%= render :partial => 'protocols/protocol' %>
	                </p>
	              </div>
	            </div>
	          </div>
	        </div>
	      	<p>
	      		<br />
	          <br />
	      		<em>Insert projects and bio here.</em>
	      	</p>
	    	</div>
	  	</div>
	  </div>
	</div>
<% else %>
	<div class="hero-unit">
		<div class="text-center">
			<div class="page-header">
				<h1>Sciero.	
				<p>
					<small>Scientific Research. Redefined.</small>
				</p>
				</h1>
			</div>
		</div>
		<div class="row-fluid">
      <div class="span4 offset4">
        <div class="span12">
          <div class="span6">
            <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-large btn-block btn-success" %>
          </div>
          <div class="span6">
            <%= link_to "Search Antibodies", antibodies_path, class: "btn btn-large btn-block btn-info" %>
          </div>
        </div>
      </div>
    </div> 
	</div>
	<%= render 'pages/welcome' %>
<% end %>