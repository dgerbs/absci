<% if user_signed_in? %>
	<%= render 'users/show' %>
<% else %>
	<div class="hero-unit">
		<div class="text-center">
			<div class="page-header">
				<h1>Sciero.	
				<p>
					<small>Scientific Research. Redefined.</small>
				</p>
				</h1>
			</div>
		</div>
		<div class="row-fluid">
      <div class="span4 offset4">
        <div class="span12">
          <div class="span6">
            <a data-toggle="modal" href="#SignUp" class="btn btn-large btn-block btn-success">Sign Up</a>
          </div>
          <div class="modal fade" id="SignUp" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h3 class="modal-title">Sign Up</h3>
                </div>
                <div class="modal-body">
                  <%= 'new user registration' %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary">Save changes</button>
                </div>
              </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
          </div><!-- /.modal -->
          <div class="span6">
            <%= link_to "Search Antibodies", antibodies_path, class: "btn btn-large btn-block btn-info" %>
          </div>
        </div>
      </div>
    </div> 
	</div>
	<%= render 'pages/welcome' %>
<% end %>
